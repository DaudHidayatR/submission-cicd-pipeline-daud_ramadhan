properties([
    pipelineTriggers([
        pollSCM('H/2 * * * *')
    ])
])

node {
    stage('Checkout') {
        checkout scm
    }

    stage('Build') {
        docker.image('python:2-alpine').inside {

            sh 'python -m py_compile sources/add2vals.py sources/calc.py'
        }
    }

    stage('Test') {
        docker.image('qnib/pytest').inside {
            try {
                sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
            } finally {
                junit 'test-reports/results.xml'
            }
        }
    }

    stage('Deliver') {
        docker.image('cdrx/pyinstaller-linux:python2').inside {
            sh 'pwd' // Print current directory
            sh 'ls -R' // List all files in workspace
            sh 'cat sources/add2vals.py' // Show the content of the file
            sh 'pip install -r requirements.txt || echo "Dependency installation failed."' // Install dependencies
            sh 'pyinstaller --onefile sources/add2vals.py || echo "Pyinstaller failed. See logs below."' // Run pyinstaller
            sh 'ls dist || echo "dist directory missing or empty."' // Check dist directory
        }
        archiveArtifacts artifacts: 'dist/add2vals', allowEmptyArchive: false
    }
}